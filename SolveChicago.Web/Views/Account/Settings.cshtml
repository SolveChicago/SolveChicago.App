
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row app-dashboard-form-container">
    <div class="create-profile-form-holder">
        <h4><strong>SETTINGS</strong></h4>
        <hr />

        <p>@Html.ActionLink("Edit Profile", "Index", "Profile")</p>
        @if (User.IsInRole("Admin"))
        {
            <p>@Html.ActionLink("Invite Admin", "Invite", "Admins")</p>
        }
        @if (User.IsInRole("Nonprofit"))
        {
            <p>@Html.ActionLink("Manage Case Managers", "CaseManagers", "Nonprofits", new { nonprofitId = ViewBag.NonprofitId }, null)</p>
        }

    </div>
</div>
