@model IEnumerable<SolveChicago.Entities.Member>

@{
    ViewBag.Title = "Prospects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th></th>
    </tr>
    @foreach (var member in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => member.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => member.FirstName)
            </td>
            <td>
                @if (User.IsInRole("Nonprofit") || User.IsInRole("CaseManager"))
                {
                    @Html.ActionLink("Invite", "InviteMember", new { memberId = member.Id, nonprofitId = ViewBag.NonprofitId })
                }
            </td>
        </tr>
    }
</table>

