@model IEnumerable<SolveChicago.Common.Models.Profile.Member.MemberProfile>

@{
    ViewBag.Title = "Dashboard";
}

<header class="members-header">
    <h2><strong>MEMBERS:</strong> OVERVIEW</h2>

    @*<div class="small-12 medium-12 large-3">
            <input class="search-members" type="text" name="search" placeholder="Search..">
        </div>*@
</header>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <section class="member-card">
            <div class="member-overview">
                <div class="row large-unstack">
                    <span class="member-card-thumb"><img src="@(item.ProfilePicturePath)" /></span>
                    <div class="columns centered has-space">
                        <span class="member-name">@(item.FullName)</span>
                    </div>
                    <div class="columns has-space">
                        <span></span>
                    </div>
                    <div class="columns">
                        <div class="progress-bar-spacer purple progress" role="progressbar" tabindex="0" aria-valuenow="@item.MemberStage.Percent" aria-valuemin="0" aria-valuetext="@(item.MemberStage.Percent) percent" aria-valuemax="100">
                            <!-- value added by tweaking inline-style-->
                            <div class="progress-meter" style="width: @(item.MemberStage.Percent)%">
                            </div>
                            <p class="small-progress-description">@(item.MemberStage.Stage)</p>
                        </div>
                    </div>
                    <div class="columns">

                    </div>
                </div>
            </div>
        </section>
    }

}
else
{
    <p>No Members.</p>
}
