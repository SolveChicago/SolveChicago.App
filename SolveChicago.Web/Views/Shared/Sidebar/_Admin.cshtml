@using SolveChicago.Common;

<ul class="menu vertical">
    <li class="menu-link @(Request.Url.AbsolutePath == "/Admins" ? "active" : "")">
        <a href="/Admins">
            <img class="menu-icon" src="../img/side-nav-members-icon.svg">
            <span class="app-dashboard-sidebar-text">Service Providers</span>
        </a>
    </li>
    <li class="menu-link @(Request.Url.AbsolutePath == "/Prospects" ? "active" : "")">
        <a href="/Prospects@(ViewBag.NonprofitId != null ? $"?nonprofitId={ViewBag.NonprofitId}" : "")">

            <img class="menu-icon" src="../img/side-nav-prospect-icon.svg">
            <span class="app-dashboard-sidebar-text">Prospects</span>
        </a>
    </li>
</ul>

<ul class="sub-menu">
    <li>
        <span class="case-manager-profile-picture">
            <img class="case-manager-thumb" src="@(ViewBag.AdminProfilePicture)">
        </span>

        <span class="case-manager-name">
            @(ViewBag.AdminName)
        </span>

        <span class="case-manager-company">
            @(Constants.Global.SolveSmartCities)
        </span>
    </li>
    <li class="menu-link @(Request.Url.AbsolutePath == "/Account/Settings" ? "active" : "")">
        <a href="/Account/Settings">
            <img class="sub-menu-icon" src="../img/submenu-icon-settings.svg">
            <span class="app-dashboard-sidebar-text">Settings</span>
        </a>
    </li>
    <li>
        @Html.Partial("_LoginPartial")
    </li>
</ul>